---
interface Props {
  title: string;
  description?: string | undefined;
}

import Navbar from "../components/Navbar.astro";

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <script
      is:inline
      defer
      data-domain="eetumaenpaa.fi"
      src="https://analytics.eetumaenpaa.fi/js/script.outbound-links.js"
    ></script>
    {description && <meta name="description" content={description} />}
    <title>{title}</title>
    <link
      rel="preload"
      href="/fonts/fira-sans-v15-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body>
    <div class="content">
      <Navbar />
      <slot />
    </div>
    <style is:global>
      /* fira-sans-regular - latin */
      @font-face {
        font-family: "Fira Sans";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src:
          url("/fonts/fira-sans-v15-latin-regular.woff2") format("woff2"),
          url("/fonts/fira-sans-v15-latin-regular.woff") format("woff");
      }

      /* fira-sans-italic - latin */
      @font-face {
        font-family: "Fira Sans";
        font-style: italic;
        font-weight: 400;
        font-display: swap;
        src:
          url("/fonts/fira-sans-v15-latin-italic.woff2") format("woff2"),
          url("/fonts/fira-sans-v15-latin-italic.woff") format("woff");
      }
      * {
        font-family: "Fira Sans", sans-serif;
        box-sizing: border-box;
      }
      pre * {
        font-family: monospace;
        margin: 0px;
      }
      html {
        font-size: 1.3em;
        padding: 0;
      }
      :root {
        color-scheme: only dark;
        --color-background: #1a1a1a;
        --color-text: #ffffff;
        --color-link: #31da8c;
        --color-link-hover: #ff7dca;
        --color-alert: #9a1a0f;
      }

      html,
      body {
        margin: 0;
      }

      body {
        padding: 30px;
        display: flex;
        justify-content: center;
      }

      .content {
        padding: 48px;
        width: 100%;
        max-width: 992px;
      }

      @media (max-width: 992px) {
        html {
          font-size: 1em;
        }
        body {
          padding: 8px;
        }
        .content {
          padding: 24px 8px 8px 8px;
        }
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        margin: 30px 0px 10px 0px;
      }

      p {
        margin: 16px 0px;
        line-height: 1.5em;
      }

      a {
        width: fit-content;
        transition-duration: 100ms;
        color: var(--color-link);
      }

      a:hover {
        text-decoration: none;
        color: var(--color-link-hover);
      }

      body {
        background-color: var(--color-background);
        color: var(--color-text);
      }

      .astro-code {
        padding: 12px;
      }

      img {
        max-width: 100%;
        height: auto;
      }
    </style>
  </body>
</html>
